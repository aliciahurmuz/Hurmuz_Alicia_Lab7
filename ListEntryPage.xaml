<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hurmuz_Alicia_Lab7.ListEntryPage"
             Title="ListEntryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Shopping List" Clicked="OnShoppingListAddedClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout Margin="20">
        <ListView x:Name="listView" ItemSelected="OnListViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Description}" Detail="{Binding Date}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="Welcome to .NET MAUI!" VerticalOptions="Center" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
